<%- include('./partials/headNoNav')%>
<main class="flex-1 grid place-items-center">
    <section class="px-6 py-8 bg-white rounded-md shadow-md flex flex-col gap-4 text-center">
        <h1 class="text-2xl mb-6">Login to your account</h1>
        <form class="flex flex-col gap-3" action="/api/login" method="POST">
            <input class="block rounded py-2 px-4" type="text" name="username" autocomplete="off">
           
            <input class="block rounded py-2 px-4" type="password" name="password" autocomplete="off">
            <button class="block bg-sky-500 rounded py-2 px-4 hover:bg-sky-600 transition-colors duration-300 text-white" type="submit">Accedi</button>
        </form>
    </section>
   
</main>
